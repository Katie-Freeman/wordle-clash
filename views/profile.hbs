<!DOCTYPE html>
<html lang="en">

    <head>

        <title>Profile</title>
        {{>header}}
    </head>

    <body>
        <header>
            {{>navbar}}
        </header>
        <div id="profileWrap">

            <h3>Profile: </h3>
            <div id="infoWrap">

                <p>name:
                    <span id="infoName">
                        {{userProfile.name}}
                    </span>
                </p>
                <p>email:
                    <span id="infoEmail">
                        {{userProfile.email}}
                    </span>
                </p>

                <input type="hidden" id="chartWin" value={{userProfile.solo.total.win}}>
                <input type="hidden" id="chartLoss" value={{userProfile.solo.total.loss}}>

            </div>
            <div id="tableContainer">
                <table id="statsTable">
                    <tr>
                        <td>Solo</td>
                        <td>all</td>
                        <td>4w</td>
                        <td>5w</td>
                        <td>6w</td>
                        <td>7w</td>
                        <td>8w</td>
                    </tr>
                    <tr>
                        <td>played</td>
                        <td>{{userProfile.solo.total.all}}</td>
                        <td>{{userProfile.solo.w4.all}}</td>
                        <td>{{userProfile.solo.w5.all}}</td>
                        <td>{{userProfile.solo.w6.all}}</td>
                        <td>{{userProfile.solo.w7.all}}</td>
                        <td>{{userProfile.solo.w8.all}}</td>
                    </tr>
                    <tr>
                        <td>won</td>
                        <td>{{userProfile.solo.total.win}}</td>
                        <td>{{userProfile.solo.w4.win}}</td>
                        <td>{{userProfile.solo.w5.win}}</td>
                        <td>{{userProfile.solo.w6.win}}</td>
                        <td>{{userProfile.solo.w7.win}}</td>
                        <td>{{userProfile.solo.w8.win}}</td>
                    </tr>
                    <tr>
                        <td>loss</td>
                        <td>{{userProfile.solo.total.loss}}</td>
                        <td>{{userProfile.solo.w4.loss}}</td>
                        <td>{{userProfile.solo.w5.loss}}</td>
                        <td>{{userProfile.solo.w6.loss}}</td>
                        <td>{{userProfile.solo.w7.loss}}</td>
                        <td>{{userProfile.solo.w8.loss}}</td>
                    </tr>
                    <tr>
                        <td>avrg attempts</td>
                        <td>{{userProfile.solo.total.avrg}}</td>
                        <td>{{userProfile.solo.w4.avrg}}</td>
                        <td>{{userProfile.solo.w5.avrg}}</td>
                        <td>{{userProfile.solo.w6.avrg}}</td>
                        <td>{{userProfile.solo.w7.avrg}}</td>
                        <td>{{userProfile.solo.w8.avrg}}</td>
                    </tr>
                </table>
            </div>

            <div id="statGraph">
                <div id="labelTotal">total <br> Games: <br>
                    <span id="gamePlayed"> {{userProfile.solo.total.all}}</span>
                </div>
                <canvas id="myChart">
                    {{!-- JS insert --}}
                </canvas>
            </div>

        </div>





        <footer>
            {{>footer}}
        </footer>
    </body>
    
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="js/app_profile.js"></script>
</html>